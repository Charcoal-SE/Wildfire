<p id="notice"><%= notice %></p>

<h1>Listing Flags</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Completed</th>
      <th>Failure reason</th>
      <th>Attempted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.id %></td>
        <td><%= flag.completed %></td>
        <td><%= flag.failure_reason %></td>
        <td><%= flag.attempted_at %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

